{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",  

    /* Modules */
    "module": "commonjs",                   

    /* JavaScript Support */
    "allowJs": true,                                
    "outDir": "./build",      
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,      

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["node_modules"]
}
